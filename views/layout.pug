    block content
    
    body()

        div(id="scroll-to-top") 
            i(class="fa fa-arrow-up")         

        //- Header Section
        div(id="header") 

            div(id="header--action-group") 

                div(id="menu") 
                    div(class="hamburger-menu") 
                        button(class="hamburger hamburger--emphatic collapsible" aria-label="Hamburger Button" type="button") 
                            span(class="hamburger-box") 
                              span(class="hamburger-inner") 

                a(href="index.html" id="brand") Ebook Marketing                

                div(id="search" class="collapsible") 
                    i(class="fa fa-search") 
            
            div(id="header--tool-group") 
                ul(id="navbar") 
                    li()
                        a(href="#") Home
                    li()
                        a(href="#") About
                    li()
                        a(href="#") Contact Us
                    li()
                        a(href="#") Support                

                form(method="POST" action="" id="search-container")
                    input(type="search" name="search-box" id="search-box" placeholder="Search..." aria-placeholder="Search...")
                   
        //-  Main Section
        block main

        //- Footer Section
        block footer
            
            div(id="footer") 
                
                div(class="footer--container") Â© Copyright 2020 || Powered By Algrith
                
        
        block bottom-bar
            
            div(id="bottom-bar") 
            
                div(id="site-search" class="switchify--parent") 
                    i(class="fa fa-search switchify--selector") 
                    ul(class="switchify--option")
                        li(class="") A
                        li(class="") B
                        li(class="") C                        
                    
                div(id="site-setting" class="switchify--parent") 
                    i(class="fa fa-user-alt switchify--selector") 
                    ul(class="switchify--option")
                        a(href="#") Log in
                        a(href="#") Register                    
                
                div(id="profile-setting" class="switchify--parent") 
                    i(class="fa fa-cog switchify--selector") 
                    ul(class="switchify--option")
                        li(class="") Dark Theme
                        li(class="") Light Theme
                        li(class="") Language

    script(type="module" src="javascripts/app.js")